<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Session Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Session"
            android:textSize="18sp"/>
        <Spinner
            android:id="@+id/spinnerSession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Name EditText -->
        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Class Name"
            android:inputType="textPersonName"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Subject Number"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>
        <NumberPicker
            android:id="@+id/subjectNumberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Student Number Picker -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Student Number"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>
        <NumberPicker
            android:id="@+id/studentNumberPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView>
